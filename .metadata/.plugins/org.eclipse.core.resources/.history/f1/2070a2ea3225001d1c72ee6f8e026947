package modelo;

import java.util.Arrays;

public class ArrayBidimensional {
	private double[][] matrizA;

	public ArrayBidimensional(double[][] matrizA) {
		this.matrizA = matrizA;
	}
	
	
	//Metodos:
	public double[][] sumar(double[][] matrizB) {
		double[][] matrizSumada = new double[matrizA.length][matrizA[0].length];
		
		for(int i=0; i<matrizA.length; i++) {
			for(int j=0; j<matrizA[0].length; j++) {
				
			}
		}
		
		return matrizSumada;
	}

	public double[][] getMatrizA() {
		return matrizA;
	}

	public void setMatrizA(double[][] matrizA) {
		this.matrizA = matrizA;
	}

	@Override
	public String toString() {
		String sResultado = "Matriz:\n";
		
		for(int i=0; i<matrizA.length; i++) {
			for(int j=0; j<matrizA[0].length; j++) {
				sResultado += String.valueOf(matrizA[i][j]) + " ";
			}
			sResultado += "\n";
		}
		
		return sResultado;
	}
	
}
